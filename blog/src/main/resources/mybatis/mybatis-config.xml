<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeHandlers>
        <typeHandler handler="com.hjj.blog.typehandler.SetTypeHandler"
                     javaType="java.util.Set" jdbcType="VARCHAR"></typeHandler>
        <typeHandler handler="com.hjj.blog.typehandler.ListMessageTypeHandler"
                    javaType="java.util.List" jdbcType="VARCHAR"></typeHandler>
    </typeHandlers>
</configuration>